{
  "name": "C3 Web Devtools",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This is a soon to be Chrome extension to assist with C3 web development.",
  "homepage_url": "https://get.cct.ericsson.net",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "tts",
    "ttsEngine",
    "notifications",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
